{% extends 'templates/header' %}

{% block CssBlock %}
<link rel="stylesheet" href="public/classic/global/vendor/select2/select2.css">
{% endblock %}


{% block content %}
  {% include 'templates/nav' %}
 
  {% include 'templates/sidebar' %}

    <div class="page">
        <div class="page-header">
            <h1 class="page-title">Gestión de municipios</h1>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="municipios/">municipios</a></li>
                <li class="breadcrumb-item active">Crear</li>
            </ol>
        </div>
        <div class="panel">
        <div class="panel-body container-fluid">
          <div class="row row-lg">
            <div class="col-md-12 col-lg-12">

                <div class="example-wrap">
                    <h4 class="example-title">municipios - Edición</h4>
                    <div class="example">
                        <form id="municipios_form" autocomplete="off">

                            <input type="hidden" name="id" value="{{data.id}}" id="id">


                            <div class="row">
                                <div class="col-xs-12 col-md-6">
                                    
                                    <div class="form-group">
                                      <label class="form-control-label" for="c">Municipio <span class="required">*</span></label>
                                      <input type="text" id="c" class="form-control" name="c" placeholder="Nombe del municipio" autocomplete="off" value="{{ data.municipio }}">
                                    </div>
                                </div> 

                                <div class="col-xs-12 col-md-6">
                                    <div class="form-group">
                                      <label class="form-control-label" for="c">Estado del municipio <span class="required">*</span></label>
                                      <select class="form-control" name="id_estado" data-plugin="select2" data-placeholder="Selecciona un estado"data-allow-clear="true">
                                        <option></option>
                                        <optgroup label="Estados">
                                          {% for i,e in estados %}
                                              <option {{ i == data.id_estado ? 'selected' : '' }} value="{{ i }}">{{ e }}</option>
                                          {% endfor %}
                                        </optgroup>
                                        
                                      </select>
                                    </div>
                                </div>  
                            </div>
                            <div class="form-group">
                                <button type="button" id="municipios_submit" class="btn btn-primary">Editar</button>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
          </div>
        </div>
      </div>
    </div>
  
  {% include 'templates/footer' %}
  <script src="public/classic/global/vendor/select2/select2.full.min.js"></script>
  <script src="public/classic/global/js/Plugin/select2.js"></script>
  <script src="public/dev/js/municipios/edit.js"></script>
</body>
</html>
{% endblock %}



